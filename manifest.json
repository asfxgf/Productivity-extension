// manifest.json
{
  "name": "The efficient extension",
  "version": "1.0",
  "description": "Afficher son age actuel sur google.com",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },

 "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["https://www.google.fr/"]
  }]
,

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/efficient.png"
   },

    "icons": {
    "16": "images/efficient.png",
    "32": "images/efficient.png",
    "48": "images/efficient.png",
    "128": "images/efficient.png"
  }
}
